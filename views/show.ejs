        <input style='color: black; font-size: 30px;' type="submit" value="Comment" name="Comments.content">
      </form> 

      <div>
            <% for(let i=0; i < comments.length; i++){ %>
            <% const oneComment = comments[i]  %>
            <p style='color:royalblue; font-size: 40px;'><%= oneComment.content %></p>
            
          </div>
      <%}%>

        </section>


        <style>
          body{
            text-align: center;
          }
        </style>
         
      </body>
