<!DOCTYPE html>
<html lang="en">

    <%- include('partials/head.ejs')  %> >

<body style="background-image: url(https://media.istockphoto.com/vectors/seamless-pattern-with-hand-drawn-doodle-questions-marks-vector-vector-id1177323484?k=20&m=1177323484&s=612x612&w=0&h=BoPsIQPMemLJaAe4ZNWN8AWYdSWfZZgcDSbFf3joIZQ=); background-size: 100vw; background-repeat: repeat-y; ">
    
    <%- include('partials/nav.ejs')%>

    <section>
        <div>
            <h1 style='color:white' class="title">Confessions</h1>
        </div>
        </div class="subheading">\
               <a style='color:white' href="/secrets/new/<%=secrets._id%>"> Add Your Secret</a>
            </div>
    </section>
    <main class="container">
    
               
                
               <% for(let idx=0; idx < secrets.length; idx++){ %>
                <% const secret = secrets[idx]  %>
                <div style= "background-image: url(./portalimg/Portal1.JPG)" class="secret_container">
                <h3 class="text-block" style= 'color: white' >category: <%=secrets[idx].category%></h3>
                <h3 class="text-block" style='color:white' >secret: <%=secrets[idx].content%> </h3>
                <h3 class="text-block" style='color:white' ><%=secret.username.username%></h3>
                <!-- <img class= "image_container" src="./portalimg/Portal1.JPG" > -->
                
                <div id = "edit">
                    <a style='color:white' href="/secrets/<%= secrets[idx]._id %>/edit">Edit</a>
                    <a style='color:white' href="/secrets/<%=secrets[idx]._id%>">Comment</a>
                </div>
                <div id="delete">
                        <form method="POST" action="/secrets/<%= secret._id%>?_method=DELETE">  
                            <input type="submit" value="Delete Secret"/>
                        </form>
                      
                    </div>
                </div>
                <% } %>
    
    </main>
</body>
</html>