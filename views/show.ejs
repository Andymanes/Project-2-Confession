      <div>
            <% for(let i=0; i < comments.length; i++){ %>
            <% const oneComment = comments[i]  %>
            <p style='color:white; font-size: 40px;'><%= oneComment.content %></p>
            
          </div>
      <%}%>

        </section>


        <style>
          body{
            text-align: center;
          }
        </style>
         
      </body>
