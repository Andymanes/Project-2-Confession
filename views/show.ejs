<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head.ejs')  %> >
<body style="background-image: url(https://media.istockphoto.com/photos/white-lines-and-spheres-picture-id1135638647?b=1&k=20&m=1135638647&s=170667a&w=0&h=j32QwPBMCmdX9ViKWvitis6N3l3Wl-lBEl1Ut9ImiBk=); background-size: 100vw; background-repeat: repeat-y; ">


  <%- include('partials/nav.ejs')%>

  <h1 style='color:royalblue'>Comments Page</h1>
  <p style='color:royalblue; font-size: 30px;'> Join the Discourse!</p>
  <div style= "background-image: url(../portalimg/Portal10.JPG)" class="secret_container">
  <small style='color:white' ><%= oneSecret.category %></small>
  <h2 style='color:white'> <%= oneSecret.content %></h2>
  

  </div>

  <section>

      <div>
          <h3 style= 'color:royalblue; font-size: 30px;''>Add a Comment:</h3>
      </div>
     
      <form action="/secrets/comments" method="POST">
        <input style='color:black' type="hidden" value="<%= oneSecret._id%>" name="secret">
        <input  style='color: black; font-size: 30px;' type="text" name="content"/>
        <input style='color: black; font-size: 30px;' type="submit" value="Comment" name="Comments.content">
      </form> 

      <div>
            <% for(let i=0; i < comments.length; i++){ %>
            <% const oneComment = comments[i]  %>
            <p style='color:royalblue; font-size: 40px;'><%= oneComment.content %></p>
            
          </div>
      <%}%>

        </section>


        <style>
          body{
            text-align: center;
          }
        </style>
         
      </body>
      </html> 
